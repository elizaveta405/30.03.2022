        <Button x:Name="Button1" Content="Авторизоваться" Margin="40,281,40,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Width="auto" Height="auto" Click="Button_Click"/>

    </Grid>
</Window>
